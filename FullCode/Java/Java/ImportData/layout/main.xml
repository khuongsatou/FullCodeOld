<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
		
	<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@drawable/backgroundbtn"
	>
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/timer"
			android:layout_marginLeft="40dp"
		/>	
		<TextView 
			android:layout_marginTop="20dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Thời Gian : "
			android:textSize="20sp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:typeface="serif"
		/>
		<Chronometer 
			android:id="@+id/chronometer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:textSize="20sp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:typeface="serif"
        />
	</LinearLayout>
	<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="#CCFF99"
	>
				<TextView 
					android:layout_marginLeft="20dp"
					
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="20sp"
					android:typeface="sans"
					android:textColor="#000000"
					
				/>
				<TextView 
					android:id="@+id/text"
					android:layout_marginLeft="20dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="italic"
					android:typeface="sans"
					android:textColor="#000000"
					android:text="Makes the TextView be exactly this many pixels wide. You could get the same effect by specifying this number in the layout parameters, specifying this number in the layout parameters"
				/>
				
			<RadioGroup 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:id="@+id/QueGroup1"
				
			>
				<RadioButton 
					android:layout_marginLeft="20dp"
					android:checked="false"
					android:id="@+id/option1" 
					android:textSize="12sp"
					android:textColor="#000000"
					android:text="Android Package"/>
					
				<RadioButton 
					android:layout_marginLeft="20dp"
					android:checked="false"
					android:textColor="#000000"
					android:id="@+id/option2" 
					android:textSize="12sp"
					android:text="Android Platform"/>
					
				<RadioButton 
					android:layout_marginLeft="20dp"
					android:checked="false"
					android:id="@+id/option3" 
					android:textColor="#000000"
					android:textSize="12sp"
					android:text="Android Package"/>
					
				<RadioButton 	
					android:layout_marginLeft="20dp"
					android:checked="false"
					android:textColor="#000000"
					android:id="@+id/option4" 
					android:textSize="12sp"
					android:text="Android Platform"/>
			</RadioGroup>
	</LinearLayout>
	
	
	<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="#FFFF99"
			android:padding="7px"
	>
		<Button 
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:text="Câu Trước"
			android:layout_marginRight="9dp"
			android:id="@+id/previous"
			android:textStyle="bold"
			android:typeface="sans"
		/>
		<Button 
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:text="Kiểm Tra"
			android:layout_marginRight="9dp"
			android:id="@+id/center"
			android:textStyle="bold"
			android:typeface="sans"
		/>
		<Button 
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:text="Câu Tiếp"
			android:id="@+id/next"
			android:textStyle="bold"
			android:typeface="sans"
		/>
	</LinearLayout>
</LinearLayout>
